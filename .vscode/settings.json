{
    "editor.formatOnSave": false,
    //"python.linting.flake8Enabled": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: pep8, indent_width: 4, column_limit: 120}"
    ],
    "python.linting.pylintArgs": [
        "--max-line-length=120"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "build": true,
        "dist": true,
        "*.egg-info": true,

        "**/log": true,
        "**/report": true,
        "**/tmp/*.png": true,
        "**/tmp/evidence": true,
        "**/tmp/video": true
    }
}